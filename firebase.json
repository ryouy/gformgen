{
  "functions": {
    "source": "backend"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/api/**", "function": "api" },
      { "source": "/auth/**", "function": "api" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
